<h1>Update Preferences</h1>
<%= form_for @preference, url: admin_preference_path(@preference) do |f| %>

    <%= f.label "Allow to create Artists" %><br>
    Enabled: <%= f.radio_button :allow_create_artists, true %>
    Disabled: <%= f.radio_button :allow_create_artists, false %><br></br>


    <%= f.label "Allow to create Songs" %><br>
    Enabled: <%= f.radio_button :allow_create_songs, true %>
    Disabled: <%= f.radio_button :allow_create_songs, false %><br></br>


    <%= f.label :song_sort_order %>:<br>
    DESC: <%= f.radio_button :song_sort_order, "DESC" %>
    ASC: <%= f.radio_button :song_sort_order, "ASC" %><br></br>


    <%= f.label :artist_sort_order %>:<br>
    DESC: <%= f.radio_button :artist_sort_order, "DESC" %>
    ASC: <%= f.radio_button :artist_sort_order, "ASC" %><br></br>

  <%= f.submit %>
<% end %>
